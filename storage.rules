rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Feed Assets ---
    match /feed/{photoId} {
      // Anyone can read images from the feed.
      allow read: if true;

      // Authenticated users can upload valid media files.
      // Admins have no restrictions.
      allow create: if request.auth != null &&
                      (
                        (request.resource.size < 5 * 1024 * 1024 &&
                         (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('video/.*')))
                        ||
                        request.auth.token.email == "kim@admincenral.com"
                      );

      // The admin can update or delete any file in the feed.
      allow update, delete: if request.auth.token.email == "kim@admincenral.com";
    }

    // --- Full Admin Override ---
    // The admin has unrestricted read and write access to the entire bucket.
    // This rule is a failsafe for any path not explicitly covered above.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "kim@admincenral.com";
    }
  }
}
