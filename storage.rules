rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ===== Main Feed Photos =====
    match /feed/{photoId} {
      // Public read access (anyone can view)
      allow read: if true;

      // Only authenticated users can upload images under 5MB
      allow create: if request.auth != null
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');

      // Allow delete & overwrite by the uploader OR by specific admin
      allow delete, update: if request.auth != null
                            && (
                                 // Allow the user who originally uploaded (same UID in metadata)
                                 request.auth.uid == resource.metadata.uploaderUid
                                 ||
                                 // Allow the admin user
                                 request.auth.token.email == "kim@admincentral.com"
                               );

      // Optional: allow admin to upload any file (not size/type restricted)
      allow create: if request.auth.token.email == "kim@admincentral.com";
    }

    // (Optional) Allow admin to read/write anywhere in bucket for moderation
    match /{allPaths=**} {
      allow read, write: if request.auth.token.email == "kim@admincentral.com";
    }
  }
}
