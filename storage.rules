
rules_version = '2';

// These rules apply to the bucket: studio-9439717090-1fb6e.firebasestorage.app
service firebase.storage {
  match /b/{bucket}/o {

    // --- Feed Assets ---
    match /feed/{path=**} {
      // Anyone can read files in the feed
      allow read: if true;

      // Any authenticated user can create a valid media file
      allow create: if request.auth != null &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('video/.*'));
      
      // The admin has full write access (create, update, delete) to the feed
      allow write: if request.auth != null && request.auth.token.email == "reellookz@gmail.com";
    }

    // --- Full Admin Override ---
    // This rule is a failsafe for any path not explicitly covered above.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "reellookz@gmail.com";
    }
  }
}
