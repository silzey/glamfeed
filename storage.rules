rules_version = '2';

// These rules apply to the bucket: studio-9439717090-1fb6e.firebasestorage.app
service firebase.storage {
  match /b/{bucket}/o {

    // Rule for all files in the project.
    match /{allPaths=**} {
      // 1. The Admin has universal read/write access to all storage paths.
      allow read, write: if request.auth != null && request.auth.token.email == 'reellookz@gmail.com';
      
      // 2. Any user can read files from the 'feed' directory.
      allow read: if allPaths.matches('feed/.*');

      // 3. Authenticated users can create new files in the 'feed' directory.
      allow create: if request.auth != null &&
                       allPaths.matches('feed/.*') &&
                       request.resource.size < 5 * 1024 * 1024 &&
                       (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('video/.*'));
    }
  }
}
