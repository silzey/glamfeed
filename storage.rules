
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Feed Assets ---
    match /feed/{path=**} {
      allow read: if true;

      // Allow write (create, update, delete) for the admin.
      // For create, also allow any authenticated user if the file is valid media.
      allow write: if request.auth != null && 
                     (request.auth.token.email == "mcculloughkenya65@gmail.com" ||
                      (request.method == 'create' &&
                       request.resource.size < 5 * 1024 * 1024 &&
                       (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('video/.*'))
                      )
                     );
    }

    // --- Full Admin Override ---
    // The admin has unrestricted read and write access to the entire bucket.
    // This rule is a failsafe for any path not explicitly covered above.
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "mcculloughkenya65@gmail.com";
    }
  }
}

    