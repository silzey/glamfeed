rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ===== Main Feed Photos =====
    match /feed/{photoId} {
      // Public read access (anyone can view)
      allow read: if true;

      // Allow create if user is authenticated and meets size/type constraints,
      // OR if the user is the specific admin.
      allow create: if request.auth != null &&
                      (
                        (
                          request.resource.size < 5 * 1024 * 1024 &&
                          (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('video/.*'))
                        ) ||
                        request.auth.token.email == "kim@admincenral.com"
                      );

      // Allow delete & overwrite by the admin
      allow delete, update: if request.auth != null && request.auth.token.email == "kim@admincenral.com";
    }

    // Allow admin to read/write anywhere in bucket for moderation
    match /{allPaths=**} {
      allow read, write: if request.auth.token.email == "kim@admincenral.com";
    }
  }
}
