
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Grant admin full read/write access to the entire database.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'reellookz@gmail.com';
    }

    // Grant all other authenticated users read-only access to specific collections.
    // This prevents non-admin users from writing data.
    match /users/{userId} {
      allow get: if request.auth != null;
    }
    match /feed/{postId} {
      allow read: if request.auth != null;
    }
  }
}
