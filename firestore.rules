rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS COLLECTION ---
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == userId || request.auth.token.email == "kim@admincentral.com";
    }

    // --- FEED (Posts) ---
    match /feed/{postId} {
      allow read: if true; // public feed visible to all
      allow create: if request.auth != null;
      allow update, delete: if (
        // Owner can edit their own posts
        request.auth.uid == resource.data.userId
        ||
        // Admins can edit any post
        request.auth.token.email == "kim@admincentral.com"
      );
    }

    // --- REPORTS (Flagged content) ---
    match /reports/{reportId} {
      allow read, write: if (
        request.auth != null &&
        request.auth.token.email == "kim@admincentral.com"
      );
    }

    // --- ANALYTICS, SETTINGS, ETC. ---
    match /admin/{document=**} {
      allow read, write: if request.auth.token.email == "kim@admincentral.com";
    }
  }
}
